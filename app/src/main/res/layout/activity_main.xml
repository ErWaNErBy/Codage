<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#60676f"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="atbash"
                android:text="@string/atbash"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="cesar"
                android:text="@string/césar"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="vigenere"
                android:text="@string/vigenère"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="homophone"
                android:text="@string/homophone"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="playfair"
                android:text="@string/playfair"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="hill"
                android:text="@string/hill"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="rectTranspo"
                android:text="@string/transposition_rectangulaire"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="des"
                android:text="@string/des"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:layout_marginBottom="10dp"
                android:onClick="rsa"
                android:text="@string/rsa"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:textColor="@color/colorGray"
                android:onClick="myEncryption"
                android:text="Mon futur chiffrement .."/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>